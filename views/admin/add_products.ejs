<%-include('header')-%>
<body class="container-fluid">
    <div class="row">
      <div class="col-2">
        <%-include('navbar')-%>
      </div>
      <div class="col-10">
        <% if(data) { %>
          <form method="post" action="/products/edit/<%= data._id %>">
        <% } else { %>
          <form method="post" action="/products/add-new" enctype="multipart/form-data">
        <% } %>
          
        
               <h5 class="fw-normal mb-3 pb-3" style="letter-spacing: 1px;">add new product</h5>
  
              <div class="form-outline mb-4">
                  <label class="form-label" for="form">Product Name</label>
                <input <%if(data){%> value="<%= data.product_name %>" <%}%> name="product_name" type="text" id="form" class="form-control form-control-lg" />
              </div>
  
              <div class="form-outline mb-4">
                  <label class="form-label" for="form">Description</label>
                <input <%if(data){%> value="<%= data.description %>" <%}%> name="description" type="description" id="form" class="form-control form-control-lg" />
              </div>
  
              <div class="form-outline mb-4">
                  <label class="form-label" for="form">category</label>
                  <select name="category" class="form-select" aria-label="Default select example">
                    <% if(data) { %>
                      <option selected><%= data.category %></option>
                    <% } else { %>
                      <option selected>Open this select menu</option>
                    <% } %>
                      <option value="smartphones">Smartphones</option>
                      <option value="wearables">Wearables</option>
                      <option value="earwear">Earwear</option>
                    </select>
              </div>
  
              <div class="form-outline mb-4">
                  <label class="form-label" for="form">Stock</label>
                <input <%if(data){%> value="<%= data.stock %>" <%}%> name="stock" type="stock" id="form" class="form-control form-control-lg" />
              </div>
  
              <div class="form-outline mb-4">
                  <label class="form-label" for="form">Price</label>
                <input <%if(data){%> value="<%= data.price %>" <%}%> name="price" type="price" id="form" class="form-control form-control-lg" />
              </div>
  
              <div class="form-outline mb-4">
                  <label class="form-label" for="form">Product Image</label>
                <input name="image" type="file" multiple/>
              </div>
  
              <div class="form-outline mb-4">
                  <label class="form-label" for="form">Is Blocked</label>
                  <div class="form-check form-switch">
                      <input name="isBlocked" class="form-check-input" type="checkbox" id="flexSwitchCheckChecked" checked>
                      <label class="form-check-label" for="flexSwitchCheckChecked"></label>
                    </div>
              </div>
  
              <div class="pt-1 mb-4">
                <% if(data) { %>
                  <button class="btn btn-dark btn-lg btn-block" type="submit">edit</button>
                <% } else { %>
                  <button class="btn btn-dark btn-lg btn-block" type="submit">add</button>
                <% } %>
              </div>
            </form>
      </div>
    </div>
    
</body>
