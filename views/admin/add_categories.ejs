    <meta property="og:type" content="">
    <meta property="og:url" content="">
    <meta property="og:image" content="">
    <!-- Favicon -->
    <link rel="icon" type="image/x-icon" href="images/icons/favicon-admin.ico?v="+ Math.trunc(Math.random()*999)>
    <!-- Template CSS -->
    <link href="/admin/css/main.css" rel="stylesheet" type="text/css" />
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
</head>

<body>
    <%-include('navbar')-%>
    <main class="main-wrap">
        <%-include('header')-%>
        <section class="content-main">
                <form method="post" action="/categories/add-new" enctype="multipart/form-data">
                <!-- <form method="post" action="/products/add-new" enctype="multipart/form-data"> -->
            <div class="row">
                <div class="col-9">
                    <div class="content-header">
                        <h2 class="content-title">Add or Edit New Categories</h2>
                        <div>
                            <!-- <button class="btn btn-light rounded font-sm mr-5 text-body hover-up">Save to draft</button> -->
                            <button type="submit" class="btn btn-md rounded font-sm hover-up">Publish</button>
                        </div>
                    </div>
                    <%if(message) {%>
                        <div class="alert alert-warning alert-dismissible fade show" role="alert">
                            <strong><%=message%></strong>
                            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                              <span aria-hidden="true">&times;</span>
                            </button>
                          </div>
                    <%}%>
                </div>
                <div class="col-lg-6">
                    <div class="card mb-4">
                        <div class="card-header">
                            <h4>Basic</h4>
                        </div>
                        <div class="card-body">
                            <form>
                                <div class="mb-4">
                                    <label for="category_name" class="form-label">Category Name</label>
                                    <input value="" oninput="slugOnchange(this.value)" name="categories_name" type="text" placeholder="Type here" class="form-control" id="product_name" required>
                                </div>
                                <div class="mb-4">
                                    <label for="category_slug" class="form-label">Category URL</label>
                                    <input name="categories_slug" value="" type="text" placeholder="Type here" class="form-control" id="categories_slug" disabled>
                                </div>
                                
                                <div class="mb-4">
                                    <label class="form-label">Is Blocked</label>
                                    <input name="isBlocked" class="form-check-input" type="checkbox" id="flexSwitchCheckChecked">
                                </div>
                                <!-- <label class="form-check mb-4">
                                    <input class="form-check-input" type="checkbox" value="">
                                    <span class="form-check-label"> Make a template </span>
                                </label> -->
                            </form>
                        </div>
                    </div> <!-- card end// -->
                </div>
                <div class="col-lg-3">
                    <div class="card mb-4">
                        <div class="card-header">
                            <h4>Images</h4>
                        </div>
                        <div class="card-body">
                            <div class="input-upload">
                                <img src="/admin/imgs/theme/upload.svg" alt="">
                                <input name="image" class="form-control" type="file">
                            </div>
                        </div>
                    </div> 
                </div>
            </div>
        </form>
        </section> <!-- content-main end// -->
        <footer class="main-footer font-xs">
            <div class="row pb-30 pt-15">
                <div class="col-sm-6">
                    <script>
                    document.write(new Date().getFullYear())
