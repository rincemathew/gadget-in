<script>
    function changeSelect() {
        var cat = document.getElementById("mySelect");
    if(cat.value == "percentage"){
        document.getElementById("min-mix").max = "90"
    }else{
        document.getElementById("min-mix").max = "5000";

    }
    }
</script>
