<body>
    <%-include('navbar')-%>
    <main class="main-wrap">
        <%-include('header')-%>
        <section class="content-main">
                <form method="post" action="/coupon/add-new">
                <!-- <form method="post" action="/products/add-new" enctype="multipart/form-data"> -->
            <div class="row">
                <div class="col-9">
                    <div class="content-header">
                        <h2 class="content-title">Add Coupon</h2>
                        <div>
                            <!-- <button class="btn btn-light rounded font-sm mr-5 text-body hover-up">Save to draft</button> -->
                            <button type="submit" class="btn btn-md rounded font-sm hover-up">Publish</button>
                        </div>
                    </div>
                    <%if(message) {%>
                        <div class="alert alert-warning alert-dismissible fade show" role="alert">
                            <strong><%=message%></strong>
                            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                              <span aria-hidden="true">&times;</span>
                            </button>
                          </div>
                    <%}%>
                </div>
                <div class="col-lg-6">
                    <div class="card mb-4">
                        <div class="card-header">
                            <h4>Basic</h4>
                        </div>
                        <div class="card-body">
                            <form>
                                <div class="mb-4">
                                    <label for="coupon_description" class="form-label">Coupon Description</label>
                                    <input value="" name="coupon_description" type="text" placeholder="Type here" class="form-control" id="" required>
                                </div>
                                <div class="mb-4">
                                    <label for="coupon_code" class="form-label">Coupon Code</label>
                                    <input value="" name="coupon_code" type="text" placeholder="Type here" class="form-control" id="" required pattern="[a-zA-Z0-9]+">
                                </div>
                                <div class="col-lg-4">
                                    <label class="form-label">Coupon Type</label>
                                    <select id="mySelect" onchange="changeSelect()" name="coupon_type" class="form-select">
                                        <option value="percentage" selected>Percentage</option>
                                        <option value="number">Number</option required>
                                    </select>
                                </div>
                                <div class="mb-4">
                                    <label for="coupon_value" class="form-label">Coupon Value</label>
                                    <input min="0" max="90" value="" name="coupon_value" type="number" placeholder="Type here" class="form-control" id="min-mix" required>
                                </div>
                                <div class="mb-4">
                                    <label for="expire_date" class="form-label">Coupon Expire Date</label>
                                    <input min="2023-01-01" max="2025-12-31" value="" name="expire_date" type="date" placeholder="Type here" class="form-control" id="" required>
                                </div>
                                <div class="mb-4">
                                    <label for="minimum_amount" class="form-label">Minimum Amount</label>
                                    <input min="0" max="90000" value="" name="minimum_amount" type="number" placeholder="Type here" class="form-control" id="" required>
                                </div>
                            </form>
                        </div>
                    </div> <!-- card end// -->
                </div>
