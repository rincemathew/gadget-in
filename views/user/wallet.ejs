<%-include('header')-%>

<div class="container-fluid">
    <div class="row px-xl-5">


        <div class="col-lg-4">
            <h5 class="section-title position-relative text-uppercase mb-3"><span class="bg-secondary pr-3">Your Account</span>
            </h5>
            <div class="bg-light p-30 mb-5">
                <div class="border-bottom">
                    <a href="/account/profile">
                        <div class="d-flex justify-content-between">
                            <p>Profile</p>
                        </div>
                    </a>
                    <a href="/account/wishlist">
                        <div class="d-flex justify-content-between">
                            <p>Wishlist</p>
                        </div>
                    </a>
                    <a href="/account/address">
                        <div class="d-flex justify-content-between">
                            <p>Address</p>
                        </div>
                    </a>
                    <a href="/account/orders">
                        <div class="d-flex justify-content-between">
                            <p>Orders</p>
                        </div>
                    </a>
                    <h6 class="mb-3">Wallet</h6>
                </div>
        
            </div>
        </div>

        
        <div class="col-lg-8">
            <h5 class="section-title position-relative text-uppercase mb-3"><span class="bg-secondary pr-3">Billing Address</span></h5>
            <table class="table table-light table-borderless table-hover text-center mb-0">
                <thead class="thead-dark">
                    <tr>
                        <th>Product or OrderID</th>
                        <th>Status</th>
                        <th>Amound</th>
                        <th>Date</th>
                    </tr>
                </thead>
                <tbody class="align-middle">
                    <%if(data) {%>
                        <%for(i=0;i<data.order_details.length;i++) {%>
                            <tr>
                                <td class="align-middle"><img src="" alt="" style="width: 50px;"><%=data.order_details[i].id_product%></td>
                                <td class="align-middle"><%=data.order_details[i].status%></td>
                                <td class="align-middle"><%=data.order_details[i].amount%></td>
                                <td class="align-middle"><%=data.order_details[i].date%></td>
                            </tr>
                        <%}%>
                    <%}%>
                    

                    </tbody>
            </table>
        </div>


        

    </div>
</div>

<%-include('footer')-%>