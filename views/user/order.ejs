<%-include('header')-%>

<div class="container-fluid">
    <div class="row px-xl-5">


        <div class="col-lg-4">
            <h5 class="section-title position-relative text-uppercase mb-3"><span class="bg-secondary pr-3">Your Account</span>
            </h5>
            <div class="bg-light p-30 mb-5">
                <div class="border-bottom">
                    <a href="/account/profile">
                        <div class="d-flex justify-content-between">
                            <p>Profile</p>
                        </div>
                    </a>
                    <a href="/account/wishlist">
                        <div class="d-flex justify-content-between">
                            <p>Wishlist</p>
                        </div>
                    </a>
                    <a href="/account/address">
                        <div class="d-flex justify-content-between">
                            <p>Address</p>
                        </div>
                    </a>
                    <h6 class="mb-3">Orders</h6>
                </div>
        
            </div>
        </div>

        
        <div class="col-lg-8">
            <h5 class="section-title position-relative text-uppercase mb-3"><span class="bg-secondary pr-3">Orders</span></h5>
            <table class="table table-light table-borderless table-hover text-center mb-0">
                <thead class="thead-dark">
                    <tr>
                        <th>Products</th>
                        <th>Status</th>
                        <th>Quantity</th>
                        <th>Status</th>
                    </tr>
                </thead>
                <tbody class="align-middle">
                    <% if(data) { %>
                        <% for(i=0;i<data.products.length;i++) { %>
                            <tr>
                                <td class="align-middle"><img src="/uploads/<%=data.products[i].productid.product_image[0]%>" alt="" style="width: 50px;"><%=data.products[i].productid.product_name%></td>
                                <td id="status<%=data.products[i].productid._id%>" class="align-middle"><i class="fa fa-truck"></i><%=data.products[i].status%></td>
                                <td class="align-middle"><%=data.products[i].quantity%></td>
                                <% if(data.products[i].status == 'out for delivery') { %>
                                <td id="<%=data.products[i].productid._id%>" class="align-middle"><button onclick="cancelOrder('<%=data.products[i].productid._id.toString()%>')" class="btn btn-sm btn-danger"><i class="fa fa-ban"> Cancel</i></button></td>
                                <% } %>
                            </tr>
                        <% } %>
                    <% } %>
                    
                    
                </tbody>
            </table>
        </div>
    </div>
</div>

<script>
    const cancelOrder = async(id)=> {
        const response = await fetch(`/account/cancelorder/${id}`,{ method: 'post'});
        const resBody = await response.json();
        alertMsg(resBody.popUp)
        document.getElementById(id).style.display = "none";
        document.getElementById("status"+id).innerHTML = "cancelled";
    }

    function alertMsg(msg) {
        Swal.fire({
            icon: 'success',
            title: msg,
            showConfirmButton: false,
            timer: 1500
        })
    }
</script>

<%-include('footer')-%>